# Set default behavior to automatically normalize line endings
* text=auto

# C++ source files should use LF
*.cpp text eol=lf
*.h text eol=lf
*.hpp text eol=lf
*.c text eol=lf
*.cc text eol=lf
*.cxx text eol=lf

# Documentation files
*.md text eol=lf
*.txt text eol=lf

# Scripts should use LF (for Linux/macOS compatibility)
*.sh text eol=lf

# Windows batch files must use CRLF
*.bat text eol=crlf
*.cmd text eol=crlf

# Project files
*.jucer text eol=lf
*.vcxproj text eol=crlf
*.sln text eol=crlf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.wav binary
*.mp3 binary
*.dll binary
*.so binary
*.dylib binary
*.a binary
*.lib binary
