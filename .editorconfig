# EditorConfig is awesome: https://EditorConfig.org

# Top-most EditorConfig file
root = true

# Default settings for all files
[*]
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true

# C++ source files
[*.{cpp,h,hpp,c,cc,cxx}]
indent_style = space
indent_size = 4
end_of_line = lf

# JUCE project files
[*.jucer]
end_of_line = lf

# Markdown and text files
[*.{md,txt}]
end_of_line = lf
trim_trailing_whitespace = true

# Windows-specific files
[*.{bat,cmd,ps1}]
end_of_line = crlf

# Visual Studio solution and project files
[*.{sln,vcxproj,vcxproj.filters}]
end_of_line = crlf

# JSON, XML, and configuration files
[*.{json,xml}]
indent_style = space
indent_size = 2
end_of_line = lf

# Makefiles must use tabs
[Makefile]
indent_style = tab
end_of_line = lf
